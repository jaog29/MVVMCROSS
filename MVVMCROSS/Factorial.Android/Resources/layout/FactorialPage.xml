<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout1"
    tools:gridSpec="1|8|#0093eeff|K:#ee8700ff:16,l:72,l:16,r|S:#83ee00ff:16,0,l:16,56,l:16,0,r">
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="24dp"
      android:text="The N value is: "
      android:id="@+id/textView1" />

  <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:inputType="number|numberDecimal"
      android:textSize="24dp"
      android:gravity="right"
      local:MvxBind="Text N"
      android:id="@+id/editText1" />
    <Button
        android:text="Calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      local:MvxBind="Click CalculateCommand" />
  


  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_margin="30dp"
      android:background="@android:color/darker_gray"
      android:id="@+id/view1" />
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="24dp"
      android:text="The factorial is: "
      android:id="@+id/textView3" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="94.0dp"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="24dp"
        android:gravity="center"
        local:MvxBind="Text Result"
        android:id="@+id/textView4" />
</LinearLayout>